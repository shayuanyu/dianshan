<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite3"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@drawable/bg_color"
       android:orientation="horizontal">

      <ImageView
          android:id="@+id/saoyisao"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_gravity="center_vertical"
          android:layout_weight="3"
          android:clickable="true"
          android:src="@drawable/sao" />

      <RelativeLayout
          android:id="@+id/search"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:clickable="true">

         <ImageView
             android:id="@+id/sousuo"
             android:layout_width="26dp"
             android:layout_height="26dp"
             android:layout_centerVertical="true"
             android:src="@drawable/find" />

         <EditText
             android:id="@+id/et_laolishi"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_toRightOf="@id/sousuo"
             android:text="   国庆节快乐"
             android:textColor="@color/colorWhite" />

         <ImageView
             android:id="@+id/xiangji"
             android:layout_width="26dp"
             android:layout_height="26dp"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:clickable="true"
             android:src="@drawable/xiangji" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:layout_alignParentBottom="true"
             android:layout_marginBottom="10dp"
             android:background="@color/colorWhite" />
      </RelativeLayout>

      <ImageView
          android:id="@+id/huiyuanma"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_gravity="center_vertical"
          android:layout_weight="3"
          android:src="@drawable/huiyuanma" />
   </LinearLayout>
<com.youth.banner.Banner
    android:id="@+id/mybanner"
    android:layout_width="match_parent"
    android:layout_height="150dp">

</com.youth.banner.Banner>
<ImageView
    android:id="@+id/iamgeview"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/nihao"
    />



















   <GridView
       android:numColumns="2"
       android:id="@+id/gride"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


   </GridView>

</LinearLayout>
