<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bawei.dianshang.Activity.SouSuoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Iv_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:clickable="true"
            android:src="@drawable/btn_back_detail_normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="@color/colorBorder" />


            <EditText
                android:id="@+id/ed_laolishi"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="请输入要搜索的商品"

                android:background="@null" />


        </RelativeLayout>

        <Button
            android:id="@+id/bt_sousuo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"
            android:background="@drawable/but_shape"
            android:text="搜索"
            android:textColor="@color/colorWhite2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_lishijilu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>

        <RelativeLayout
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <ImageView
                android:id="@+id/pic_history"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/history"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史记录"
                android:layout_toRightOf="@id/pic_history"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>




</LinearLayout>
